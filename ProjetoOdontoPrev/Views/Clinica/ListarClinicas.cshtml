@model List<ProjetoOdontoPrev.Models.Clinica>

@{
    ViewData["Title"] = "Listagem das Clínicas do Cliente 1";
}

<h2>Listagem das Clínicas do Cliente 1</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID Cliente</th>
            <th>Cliente</th>
            <th>CEP Cliente</th>
            <th>ID Clínica</th>
            <th>Nome Clínica</th>
            <th>CEP Clínica</th>
            <th>Distância (km)</th>
            <th>Distância Real</th>
            <th>Nota Pesquisa</th>
            <th>Valor Consulta</th>
            <th>Distância Normalizada</th>
            <th>Nota Normalizada</th>
            <th>Valor Normalizado</th>
            <th>Pontuação</th>
            <th>Rank Novo</th>
            <th>Status Clínica</th>
            <th>Data Ação</th>
            <th>Hora Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clinica in Model)
        {
            <tr>
                <td>@clinica.ID_Cliente</td>
                <td>@clinica.Cliente</td>
                <td>@clinica.CEP_Cliente</td>
                <td>@clinica.ID_Clinica</td>
                <td>@clinica.NomeClinica</td>
                <td>@clinica.CEP_Clinica</td>
                <td>@clinica.Distancia</td>
                <td>@clinica.DistanciaReal</td>
                <td>@clinica.NotaPesquisa</td>
                <td>@clinica.ValorConsulta</td>
                <td>@clinica.DistanciaNormalizada</td>
                <td>@clinica.NotaNormalizada</td>
                <td>@clinica.ValorNormalizado</td>
                <td>@clinica.Pontuacao</td>
                <td>@clinica.RankNovo</td>
                <td>@clinica.StatusClinica</td>
                <td>@clinica.DataAcao.ToString("yyyy-MM-dd")</td>
                <td>@clinica.HoraAcao</td>
            </tr>
        }
    </tbody>
</table>